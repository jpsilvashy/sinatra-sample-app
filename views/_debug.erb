<% if 'development' == ENV['RACK_ENV'] %>

  <div id="debug-block">
    <pre>CURRENT USER <%= current_user.to_yaml  %></pre><hr/>
    <pre>SESSION      <%= session.to_yaml       %></pre><hr/>
    <pre>PARAMS       <%= params.to_yaml        %></pre><hr/>
    <pre>FLASH        <%= flash.to_yaml         %></pre><hr/>
    <pre>ENVIRONMENT  <%= ENV.to_hash.to_yaml   %></pre>
  </div>

  <script type="text/javascript">
    var t = document.getElementById('debug-toggle'),
        d = document.getElementById('debug-block');
    t.onclick = function(){
      d.style.display = (d.style.display == "none") ? "" : "none";
    }
  </script>

<% end %>